<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="Kalkulator_Sederhana.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Kalkulator Sederhana" textFill="blueviolet" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label text="Masukan Bilangan Pertama"/>
        <TextField fx:id="tfBilanganPertama" focusTraversable="false" promptText="Masukan Bilangan Pertama" />
    </VBox>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Label text="Masukan Bilangan Kedua"/>
        <TextField fx:id="tfBilanganKedua" focusTraversable="false" promptText="Masukan Bilangan Bilangan Kedua"/>
    </VBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="btnTambah" text="Tambah" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3"
                onAction="#onButtonClicked"/>
        <Button fx:id="btnKurang" text="Kurang" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3"
                onAction="#onButtonClicked"/>
        <Button fx:id="btnKali" text="Kali" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3"
                onAction="#onButtonClicked"/>
        <Button fx:id="btnBagi" text="Bagi" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3"
                onAction="#onButtonClicked"/>

        <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
            <Label text="Hasil"/>
                   <TextField fx:id="tfHasil" disable="true"/>

        </VBox>


    </HBox>




</GridPane>